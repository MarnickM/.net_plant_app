<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="plantdration.Views.HomeView"
             xmlns:viewModels="clr-namespace:plantdration.ViewModels"
             x:DataType="viewModels:IHomeViewModel"
             Shell.TitleColor="White"
             Shell.BackgroundColor="ForestGreen"
             Title="Home">

    <ScrollView BackgroundColor="LimeGreen">
        <StackLayout Padding="30">
            <Label Text="{Binding User.Name}"
                 FontSize="Medium"
                 HorizontalOptions="Center"
                 Margin="0,10,0,0"/>

            <HorizontalStackLayout Spacing="5"
				HorizontalOptions="Center">
                <Button BackgroundColor="ForestGreen" TextColor="White" Command="{Binding PickPhotoCommand}" HorizontalOptions="Start"
					Text="Pick a picture" />
                <Button BackgroundColor="ForestGreen" TextColor="White" Command="{Binding TakePhotoCommand}" HorizontalOptions="End"
					Text="Take a picture" />
            </HorizontalStackLayout>
            
            
        </StackLayout>
    </ScrollView>

</ContentPage>
