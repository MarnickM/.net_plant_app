<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="plantdration.Views.DetailsView"
             
             xmlns:viewModels="clr-namespace:plantdration.ViewModels"
			 x:DataType="viewModels:IDetailsViewModel"
             Shell.TitleColor="White"
             Shell.BackgroundColor="ForestGreen"
             Title="User">

    <ScrollView BackgroundColor="LimeGreen">
        <StackLayout Padding="30">

            <Label Text="Name"
               FontSize="Medium"
               Margin="0,10,0,0"/>
            <Entry BackgroundColor="DarkGreen" TextColor="White" Text="{Binding User.Name}"
               Placeholder="Enter your name"/>

            <Button BackgroundColor="ForestGreen" TextColor="White" Text="{Binding SaveText}"
				Command="{Binding SaveCommand}"
                Margin="0,20,0,0"/>
            <Button BackgroundColor="ForestGreen" TextColor="White" Text="Delete"
				Command="{Binding DeleteCommand}"
				IsVisible="{Binding CanDelete}"
				Margin="0,5,0,0"/>
            <Button BackgroundColor="ForestGreen" TextColor="White" Text="Cancel"
				Command="{Binding CancelCommand}"
				Margin="0,5,0,0"/>
        </StackLayout>
    </ScrollView>

</ContentPage>